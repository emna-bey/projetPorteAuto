<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="154dp"
            android:layout_height="250dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/icon_historique" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titleHisto" 
                android:textStyle="bold|italic"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:layout_width="114dp"
                android:layout_height="125dp"
                android:src="@drawable/icon_voitures_enreg"
                android:onClick="onClickVoitures"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titleVoituresEnreg"
                android:textStyle="bold|italic" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="154dp"
            android:layout_height="250dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/icon_param" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titleParam"
                android:textStyle="bold|italic" />

        </LinearLayout>
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:gravity="center"
            android:orientation="vertical" >

             <ImageButton
                 android:layout_width="115dp"
                 android:layout_height="125dp"
                 android:src="@drawable/icon_help" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titleHelp"
                android:textStyle="bold|italic" />
        </LinearLayout>

    </LinearLayout>
    


</LinearLayout>